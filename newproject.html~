    <script>

var map;
var markers = [];

function initMap() {
    var index;
    map = new google.maps.Map(document.getElementById('map'), {
	    center: {lat: 51, lng: 0},
	    zoom: 7
	  });

    for(index = 0; index < data.length; index++){
    	var myLatLng = new google.maps.LatLng(data[index].Latitude, data[index].Longitude);

	var marker = new google.maps.Marker({
	    position: myLatLng,
	    map: map,
	    title: 'Hello World!'
	  });
	markers.push(marker);
    }

    var markerCluster = new MarkerClusterer(map, markers);
}
    
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB4X2BM26yxenHgvGT1xNdTHYmo_9mBRSU&callback=initMap"
        async defer></script>

